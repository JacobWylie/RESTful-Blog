<% include ./partials/header %>

<h1>index page</h1>

<% blogs.forEach( blog => { %>
		<h3><%= blog.title %></h3>
		<img src="<%= blog.image %>">
		<p><%= blog.created %></p>
		<p><%- blog.body.substring(0, 100) %>...</p>
		<a href="/blogs/<%= blog._id %>">Read More</a>
<%  }) %>

