<% include ./partials/header %>

<div class="ui main text container segment">
	<div class="ui huge header"><%= blog.title %></div>
		<div class="ui top attached">
			<div class="item">
				<img class="ui centered rounded image" src="<%= blog.image %>">
				<div class="content">
					<span><%= blog.created.toDateString() %></span>
				</div>
				<div class="description show-body">
					<p><%- blog.body %></p>
				</div>
				<a href="/blog/blogs/<%= blog._id %>/edit">
					<button class="ui orange basic button">Edit</button>
				</a>
				<!-- method-override to DELETE -->
				<form id="delete" action="/blog/blogs/<%= blog._id %>?_method=DELETE" method="POST">
					<button class="ui red basic button">Delete</button>
				</form>
			</div>
		</div>
</div>

<% include ./partials/footer %>
